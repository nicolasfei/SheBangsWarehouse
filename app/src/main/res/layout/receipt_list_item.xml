<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/w"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/w0"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="start|center"
            android:text="供应商编号：9079" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/w1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="start|center"
            android:text="&#12288;&#12288;片区&#12288;：连锁事业部\n&#12288;&#12288;库房&#12288;：JM库房" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/w2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="start|center"
            android:text="&#12288;下单属性：统下\n&#12288;&#12288;类别&#12288;：牛仔裤"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/w3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="start|center"
            android:lines="4"
            android:maxHeight="80dp"
            android:text="&#12288;&#8194;旧货号&#8194;：785\n&#12288;&#12288;备注&#12288;：此单交给库房\n&#12288;&#12288;&#12288;&#12288;&#12288;&#12288;入账，另一联作为\n&#12288;&#12288;&#12288;&#12288;&#12288;&#12288;发给分店的依据"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toEndOf="@+id/w"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/b0"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="start|center"
            android:text="&#12288;货物条码&#12288;：956845879CCB" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableEnd="@drawable/ic_sj_down"
            android:gravity="start|center"
            android:text="&#12288;分店编号&#12288;：JM12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="start|center"
            android:text="&#12288;下单日期&#12288;：12月23日\n交货截至日期：01月25日"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="start|center"
            android:lines="4"
            android:maxHeight="80dp"
            android:text="&#12288;&#8194;&#8194;新货号&#8194;&#8194;：912232B\n&#8194;&#12288;&#8194;数量&#8194;&#12288;&#8194;：4\n&#8194;&#12288;&#8194;尺码&#8194;&#12288;&#8194;：M\n"
            android:visibility="visible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>