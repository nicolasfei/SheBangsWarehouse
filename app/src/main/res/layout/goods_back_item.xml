<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/supplierId"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:singleLine="false"
            android:text="供应商编号：2365223"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/fId"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:text="分店ID：MM22"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/goodsClassName"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="货物类别：牛仔裤"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/line1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/state"
            style="@style/TextViewStyleItem"
            android:layout_height="20dp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="正常"
            android:visibility="gone" />

        <TextView
            android:id="@+id/goodsId"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:text="新货号：7022689"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/oldGoodsId"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="旧货号：28286991"
            android:visibility="gone" />

        <TextView
            android:id="@+id/goodsType"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="货号类型：普通"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id"
            style="@style/TextViewStyleItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:text="条码：170228B08299"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>