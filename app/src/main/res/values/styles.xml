<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <!--action bar 高度-->
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
        <item name="actionBarSize">@dimen/action_bar_height</item>
    </style>

    <!--无ActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingStart">@dimen/text_view_margin</item>
    </style>

    <style name="TextViewStyleItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/text_view_item_height</item>
        <item name="android:gravity">start|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <!--date time picker-->
    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/date_picker_bg</item>
    </style>
</resources>
